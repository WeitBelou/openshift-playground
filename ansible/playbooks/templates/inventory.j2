# Create an OSEv3 group that contains the masters, nodes, and etcd groups
[OSEv3:children]
masters
nodes
etcd

# Set variables common for all OSEv3 hosts
[OSEv3:vars]
# SSH user, this user should allow ssh based auth without requiring a password
ansible_ssh_user=openshift

# If ansible_ssh_user is not root, ansible_become must be set to true
ansible_become=true

openshift_deployment_type=openshift-enterprise
oreg_url={{ docker_registry_ip }}:5000/openshift3/ose-${component}:${version}
openshift_examples_modify_imagestreams=true

# host group for masters
[masters]
master.openshift

# host group for etcd
[etcd]
master.openshift

# host group for nodes, includes region info
[nodes]
master.openshift openshift_node_group_name='node-config-master'
node-1.openshift openshift_node_group_name='node-config-infra'
node-2.openshift openshift_node_group_name='node-config-compute'
